<style>
  body {
  padding-bottom: 40px;
  background-color: #eee;
}

.new_user {
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
}
.new_user h2,
.new_user .checkbox {
  margin-bottom: 10px;
}
.new_user .checkbox {
  font-weight: normal;
}
.new_user #user_email,.new_user #user_password {
  width: 100%;
  border-radius: 5px;
  padding: 5px;
}
.new_user .form-control:focus {
  z-index: 2;
}
.new_user input[type="email"] {
}
.new_user input[type="password"] {
}
.new_user input[type="submit"]{
  width: 100%;
}
</style>
<div class="container" style="height: 500px;">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>Please Sign in</h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


</div>

